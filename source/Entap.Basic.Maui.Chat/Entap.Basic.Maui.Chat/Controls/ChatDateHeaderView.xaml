<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Entap.Basic.Maui.Chat.ChatDateHeaderView"
             IsVisible="{Binding Message.DateVisible}"
             >
    <Frame
        Style="{StaticResource ChatDateHeaderFrameStyle}">
        <Label
            Style="{StaticResource ChatDateHeaderLabelStyle}"
            Text="{Binding Message.SendDateTime, Converter={StaticResource dateConverter}}"/>
    </Frame>
</ContentView>

